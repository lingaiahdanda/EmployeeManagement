@model EmpMgmt.Models.UpdateEmployeeViewModel
@{
}


<form method="post" action="View">
    <div class="form-group">
        <label for="empId">Name</label>
        <input type="text" class="form-control" id="empId" asp-for="Id" readonly />
    </div>
    <div class="form-group">
        <label for="empName">Name</label>
        <input  type="text" class="form-control"  id="empName" asp-for="Name" placeholder="Enter Employee Name"/>
    </div>
    <div class="form-group">
        <label for="empEmail">Email</label>
        <input type="email" class="form-control" id="empEmail" asp-for="Email" placeholder="Enter Employee Email" />
    </div>
    <div class="form-group">
        <label for="empSalary">Salary</label>
        <input type="number" class="form-control" id="empSalary" asp-for="Salary" placeholder="Enter Employee Salary" />
    </div>
    <div class="form-group">
        <label for="empDOB">DateOfBirth</label>
        <input type="date" class="form-control" id="empDOB" asp-for="DateOfBirth" placeholder="Enter Employee DOB" />
    </div>
    <div class="form-group mb-3" >
        <label for="empDept">Department</label>
        <input type="" class="form-control" id="empDept" asp-for="Department" placeholder="Enter Employee Department" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>

    <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Employees">Delete</button>
</form>